@model Student
@{
    ViewData["Title"] = "Изменить студента";
}

<h2>Редактировать студента</h2>

<form asp-action="Edit" method="post" class="form-container">
    <input asp-for="Id" type="hidden"/>
    
    <div class="form-group">
        <label asp-for="Name" class="form-label">Имя студента:</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="form-label">Возраст:</label>
        <input asp-for="Age" type="number" class="form-control"/>
        <span asp-validation-for="Age" class="validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Group" class="form-label">Группа:</label>
        <input asp-for="Group" class="form-control"/>
        <span asp-validation-for="Group" class="validation-error"></span>
    </div>

    <div class="form-actions">
        <a asp-action="Index" class="btn btn-secondary">
            Назад к списку
        </a>
        <button type="submit" class="btn btn-warning">
            Сохранить изменения
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
