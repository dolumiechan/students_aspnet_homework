@model PagedList<Student>
@{
    ViewData["Title"] = "Список студентов";
}

<h2>Список студентов</h2>

<div style="margin-bottom: 20px;">
    <a href="/Students/Create" class="btn btn-success">
        Создать нового студента
    </a>
</div>

<form asp-action="Index" method="get" class="search-form">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
           placeholder="Поиск по имени или группе" class="search-input"/>
    <button type="submit" class="btn btn-primary">
        Найти
    </button>
</form>

<div class="table-container">
    <table class="students-table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]">
                        ID
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                        Имя
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["AgeSort"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                        Возраст
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["GroupSort"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                        Группа
                    </a>
                </th>
                <th class="table-actions">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var student in Model.Items)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>
                        <a href="/Students/Details/@student.Id">
                            @student.Name
                        </a>
                    </td>
                    <td>@student.Age</td>
                    <td>@student.Group</td>
                    <td class="table-actions">
                        <a href="/Students/Edit/@student.Id" class="btn btn-warning btn-sm">
                            Редактировать
                        </a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@student.Id"/>
                            <button type="submit" 
                                    class="btn btn-danger btn-sm"
                                    onclick="return confirm('Вы уверены, что хотите удалить студента @student.Name?')">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p class="records-info">Показано @Model.Items.Count записей</p>

@if (Model.TotalPages > 1)
{
    <div class="pagination">
        @if (Model.HasPreviousPage)
        {
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-searchString="@ViewData["CurrentFilter"]">
                Предыдущая
            </a>
        }
        
        @for(int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.PageIndex)
            {
                <span>@i</span>
            }
            else
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">@i</a>
            }
        }
        
        @if (Model.HasNextPage)
        {
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-searchString="@ViewData["CurrentFilter"]">
                Следующая
            </a>
        }
    </div>
}
